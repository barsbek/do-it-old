<%= form_with(url: login_path, class: "login-form") do |form| %>
  <div class="login-form-field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="login-form-field">
    <%= form.label :password %>
    <%= form.text_field :password, id: :user_password %>
  </div>

  <div class="login-form-actions">
    <%= form.submit "Log in", class: "login-form-button" %>
  </div>
<% end %>
